{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "lib",
      "lib": [
        "esnext",
        "esnext.array"
      ],
      "types": [
        "jest",
        "node"
      ],
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true,
      "noEmitOnError": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "inlineSources": true,
      "downlevelIteration": true,
    },
    "exclude": [
      "node_modules",
      "test",
      "lib"
    ]
  }