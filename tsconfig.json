{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "lib": ["esnext", "esnext.array"],
    "types": ["jest", "node"],
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "downlevelIteration": true
  },
  "include": ["."],
  "exclude": ["node_modules", "src/test", "lib"]
}
